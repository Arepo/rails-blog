<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flashes">
      <% flash.each do |_, value| %>
        <% value.each do |message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
