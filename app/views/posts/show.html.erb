<div class="container">
  <div class="row">
    <%= content_for :page_title do %>
      <%= @post.title %>
    <% end %>

    <p>Tagged with: <%= @post.list_tags %></p>
    <p>In topic: <%= @post.topic %></p>
    <%= @post.body %>
    <%= link_to_if(current_user, 'Edit post', edit_post_path(@post)) {} %>
    <%= link_to_if current_user, 'Delete post',
        post_path(@post),
        method: :delete,
        data: { confirm: 'Definitely delete?' } {}
    %>
  </div>
</div>
